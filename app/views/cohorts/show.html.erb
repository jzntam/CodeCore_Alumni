<h1>Cohorts#show</h1>
<p>Find me in app/views/cohorts/show.html.erb</p>

<%= link_to "Create New Contact", new_cohort_contact_path(@cohort) %>


  <section id="profile">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Alumni</h2>
        <hr>
      </div>
    </div>
    <div class="row">

<% @cohort.contacts.each do |contact| %>
  <div class="col-sm-4 profile-item">
    <a href="#profileModal_<%= dom_id(contact) %>" class="profile-link" data-toggle="modal">
      <div class="caption">
        <div class="caption-content">
          <i class="fa fa-search-plus fa-3x"></i>
        </div>
      </div>
      <img src="http://fillmurray.com/360/250" class="img-responsive" alt="">
    </a>
  </div>

  <!-- Profile Modal -->
  <div id="profileModal_<%= dom_id(contact) %>" class="profile-modal modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-content">
      <div class="close-modal" data-dismiss="modal">
        <div class="lr">
          <div class="rl">
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-lg-10 col-lg-offset-1">
            <div class="modal-body col-md-12">
              <h2>Taylor Yoshida Wilson</h2>
              <hr class="star-primary">
              <div class="col-md-4">
                <img src="http://fillmurray.com/325/400" class="img-responsive img-centered" alt="">
              </div>
              <div class="col-md-8">
                <table class="up-close">
                  <tr>
                    <td><h4>Name: </h4></td>
                    <td><%= contact.full_name %></td>
                  </tr>
                  <tr>
                    <td><h4>Company: </h4></td>
                    <td><%= contact.company %></td>
                  </tr>
                  <tr>
                    <td><h4>Position: </h4></td>
                    <td><%= Faker::Name.title %></td>
                  </tr>
                  <tr>
                    <td><h4>Project:</h4></td>
                    <td><a href="pickyeatr.herokuapp.com"><%= contact.company %></a></td>
                  </tr>
                  <tr>
                    <td><h4>Profile:</h4></td>
                    <td>
                      <%= Faker::Lorem.paragraph(8, true) %> 
                    </td>
                  </tr>
                </table>
                <ul class="list-inline item-details">
                  <li><strong>Phone: </strong><%= Faker::PhoneNumber.phone_number %></li>
                  <li><strong>Email: </strong><%= contact.first_name.downcase %>@<%= contact.full_name.gsub(' ','').downcase %>.com</li>
                  <li><strong>Website: </strong>www.<%= contact.full_name.gsub(' ','').downcase %>.com</li>
                  <li><strong>GitHub: </strong>@<%= Faker::Internet.user_name  %></li>
                  <li><strong>LinkedIn: </strong>@<%= Faker::Internet.user_name  %></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Close</button>
      </div>
    </div>
  </div>

<% end %>

</div><!-- row -->
</section>
