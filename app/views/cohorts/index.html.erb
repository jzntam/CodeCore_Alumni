<section>
  <%= link_to "Add Cohort", "javascript:void(0)", class: "btn btn-cc", data: {toggle: "modal", target: "#newCohortModal"} %>
  <%= render "cohorts/cohort_modal" %>
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2>Graduated Classes</h2>
      <hr>
    </div>
  </div>
  <div>
    <table class="table table-hover">
      <thead>
        <tr>
          <td><h4>BootCamp</h4></td>
          <td><h4>Details</h4></td>
          <td><h4>Action</h4></td>
        </tr>
      </thead>
      <tbody class="cohorts">
        <% @cohorts.each do |cohort| %>
          <%= render partial: "cohort", locals: {cohort: cohort} %>
        <% end %>
      </tbody>
    </table>
  </div>
</section>