<div class="contact-form-container well col-md-12">
  <h2>Create Contact</h2>
  <hr class="thick">
  <%= form_for @contact, url: cohort_contacts_path(@cohort) do |f| %>
    <% if @contact.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% @contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-md-6">
      <div class="control-group">
        <%#= f.label :first_name %>
        <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
      </div><br>
      <div class="control-group">
        <%#= f.label :last_name %>
        <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
      </div><br>
      <div class="control-group">
        <%#= f.label :email %>
        <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
      </div><br>
      <div class="control-group">
        <%#= f.label :phone %>
        <%= f.text_field :phone, placeholder: "Phone Number", class: "form-control" %>
      </div><br>
    </div>
    <div class="col-md-6">
      <div class="control-group">
        <%#= f.label :company %>
        <%= f.text_field :company, placeholder: "Company", class: "form-control" %>
      </div>
      <div class="control-group">
        <%#= f.label :website %><br>
        <%= f.text_field :website, placeholder: "Website", class: "form-control" %>
      </div>
      <div class="control-group">
        <%#= f.label :other %><br>
        <%= f.text_area :other, placeholder: "Profile", rows: "4", class: "form-control" %>
      </div><br>
    </div>
    <div>
      <%= f.submit class: "form-control btn btn-cc" %>
    </div>
  <% end %>  
</div>