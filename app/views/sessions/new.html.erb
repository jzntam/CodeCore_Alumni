<div class="login-container well">
  <h2>Log In</h2>
  <%= form_for (@user || @user = User.new), url: sessions_path, method: :post do |f| %>
    <div class="form-group">
      <div class="input-group input-group-md">
        <span class="input-group-addon"><i class="fa fa-envelope fa-input"></i></span>
        <div class="icon-addon addon-md">
          <%#= f.label :email %>
          <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group input-group-md">
        <span class="input-group-addon"><i class="fa fa-lock fa-input"></i></span>
        <div class="icon-addon addon-md">
          <%#= f.label :password %>
          <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "Log In", class: "btn btn-cc" %>
    </div>
  <% end %>
</div>